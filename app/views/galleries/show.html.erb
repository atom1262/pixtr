<h2><%= @gallery.name %></h2>

<% if @gallery.user == current_user %>
  <nav>
    <%= link_to "Edit", edit_gallery_path(@gallery) %>
    <%= link_to "Delete", @gallery,  method: :delete %>
    <%= link_to "New image", new_gallery_image_path(@gallery) %>
  </nav>
<% end %> 
  <div>
  <% if current_user.likes? @gallery %>
    You like this gallery!
    <%= button_to "Unlike", unlike_gallery_path(@gallery), method: :delete %>
  <% else %>
    <%= button_to "Like", like_gallery_path(@gallery) %>
  <% end %>
  </div>

  <div>
    <%= pluralize(@gallery.likes.count, "like") %>
  </div>

<%= render @gallery.images %>