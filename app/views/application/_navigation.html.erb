<header class="navigation">
  <div class="menu-wrapper">
    <a href="javascript:void(0)" class="logo">
      <img src = "https://cdn1.iconfinder.com/data/icons/49handdrawing/128x128/photo-camera.png", width= "40", height= "100">
    </a>
    <p class="menu-button" id="js-mobile-menu">MENU</p>
    <div class="nav">
      <ul id="navigation-menu">
        
        <% if signed_in? %>
        <nav>
          <ul>
            <% if current_user.upgraded? %>
              <li><%= link_to 'Premium User', dashboard_path %>
            <% else %>
              <li><%= link_to 'Upgrade Account', account_path %>
           `<% end %>
            <li><%= link_to 'Galleries', galleries_path %>
            <li><%= link_to 'Groups', groups_path %>
            <li><%= link_to 'All Photos by this User', current_user %>
          </ul>
        </nav>
        <% end %>
        <li class="navigation-search-bar">
          <div class="search-bar">
            <div class="search-and-submit">
              <%= form_for(:search, url: search_path, method: :get) do |form| %>
                <%= form.text_field :query, placeholder: "Search Here" %>
                <button type="submit">
                  <img src="https://raw.githubusercontent.com/Magnus-G/Random/master/search-icon.png" alt="">
                </button>
              <% end %>
            </div>
          </div>
        </li>
        <li class="sign-up"><a href="javascript:void(0)">Sign Up</a></li>
      </ul>
    </div>
  </div>
</header>

<script>
  $(function() {
    var menu = $('#navigation-menu');
    var menuToggle = $('#js-mobile-menu');

    $(menuToggle).on('click', function(e) {
      e.preventDefault();
      menu.slideToggle(function(){
        if(menu.is(':hidden')) {
          menu.removeAttr('style');
        }
      });
    });
  });
</script>
