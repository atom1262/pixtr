<h2><%= @image.name %></h2>

<% if @image.user == current_user %>
  <nav>
    <%= link_to 'Edit', edit_image_path(@image) %>
    <%= link_to 'Delete', @image,
      method: :delete,
      confirm: "Are you sure you want to delete this image?" %>
  </nav>
<% end %>

<div>
<p><strong>Uploaded by: </strong><%= link_to @image.user.email, @image.user %></p>
</div>
<div>
<p><strong>Uploaded on: </strong><%= (@image.created_at) %></p>
</div>

<%= image_tag(@image.url, width: "200") %>
<p><%= @image.description %></p>

<div>
  <%= pluralize(@image.likes.count, "like") %>
</div>

<div>
<% if current_user.likes? @image %>
  You like this image!
    <%= button_to "Unlike", unlike_image_path(@image), method: :delete %>
<% else %>
  <%= button_to "Like", like_image_path(@image) %>
<% end %>
</div>

<% if signed_in? %>
  <%= form_for([@image, @comment]) do |form| %>
    <%= form.text_area :body %>
    <%= form.submit "Comment" %>
<% end %>
<% else %>
  <%= link_to "Sign-in", sign_in_path %> to comment
<% end %>

  <%= render @comments %>
  <%= paginate @comments %>