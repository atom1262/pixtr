<h2><%= @group.name %></h2>

<% if signed_in? %>
  <% if current_user.joined?(@group) %>
  You are a member!
    <%= button_to "Leave Group", 
    leave_group_path(@group),
     method: :delete %>

     <div id= "like-button">
    <% if current_user.likes? @group %>
        <%= button_to "Unlike", unlike_group_path(@group), remote: true, method: :delete %>
    <% else %>
      <%= button_to "Like", like_group_path(@group), remote: true %>
    <% end %>
    </div>

<% else %>
  <%= button_to "Join Group", join_group_path(@group) %>
  <% end %>
<% end %>

<div id= "like-count">
<%= pluralize(@group.likes.count, "like") %>
</div>

<div>
  <%= render @images %>
</div>